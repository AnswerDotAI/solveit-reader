{
  "manifest_version": 3,
  "name": "Solveit Reader",
  "version": "3.0",
  "description": "Import webpages and chat with Solveit AI",
  "permissions": ["activeTab", "storage", "cookies", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [{
    "resources": ["turndown.js", "turndown-plugin-gfm.js", "api.js"],
    "matches": ["<all_urls>"]
  }]
}
